{% extends "backView/templateBack.twig" %}


{% block content %}

<section class="projects-section bg-light" id="backListPosts">
    <div class="container">
        <div class="row">
            <h2 class="col-lg-6 font-weight-bold align-self-center">Gestion des utilisateurs</h2>
            <div class="col-lg-6 text-right">
                <a href="index.php?admin=adduser" class="btn btn-primary">Ajouter un utilisateur</a>
            </div>   
        </div>
        <hr class="d-none d-lg-block mb-3" />
        <div class="row mb-3">
            <div class="col-lg-1  font-weight-bold align-self-center">Id</div>
            <div class="col-lg-2  font-weight-bold align-self-center">Pseudo</div>
            <div class="col-lg-3  font-weight-bold align-self-center">Email</div>
            <div class="col-lg-2  font-weight-bold align-self-center">Date d'ajout</div>
            <div class="col-lg-2  font-weight-bold align-self-center">Droits</div>
            <div class="col-lg-2 font-weight-bold align-self-center text-center">Action</div>
        </div>
        <hr class="d-none d-lg-block mb-2 ml-0" />
        {% for user in users %}
            <div class="row mt-3 mb-3">
                <div class="col-lg-1 align-self-center"><span class="badge badge-dark">{{user.id}}</span></div>
                <div class="col-lg-2 text-truncate align-self-center">{{ user.userName }}</div>
                <div class="col-lg-3 align-self-center">{{ user.userEmail }}</div>
                <div class="col-lg-2 align-self-center">{{ user.registerDate|date("d/m/Y") }}</div>
                
                {% if user.type == 'administrator' %}
                    <div class="col-lg-2 align-self-center text-blue font-weight-bold">Administrateur</div>
                {% elseif user.type == 'author' %}
                    <div class="col-lg-2 align-self-center text-blue font-weight-bold">Auteur</div>
                {% elseif user.type == 'moderator' %}
                    <div class="col-lg-2 align-self-center text-blue font-weight-bold">Mod√©rateur</div>
                {% endif %}
                
                <!--Edit-->
                <div class="col-lg-1 align-self-center text-center">
                    <a href={{'index.php?admin=adduser&id=' ~ user.id }} class="btn btn-sm text-success font-weight-bold">
                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                        </svg>
                    </a>
                </div>
                <!--Delete-->
                <div class="col-lg-1 text-center justify-content-between align-self-center"> 
                    <a href={{'index.php?admin=deleteuser&id=' ~ user.id}} class="btn btn-sm text-danger font-weight-bold">
                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                        </svg>
                    </a>
                </div>
            </div>
            <hr class="d-none d-lg-block mb-1 mt-1" />
        {% endfor %}
    </div>
</section>

{% endblock %}